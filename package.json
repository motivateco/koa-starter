{
  "name": "koa-starter",
  "version": "1.0.0",
  "description": "A simple boilerplate for Koa based APIs",
  "main": "server.js",
  "engines": {
    "node": ">=7.6.0"
  },
  "scripts": {
    "start": "NODE_PATH=./ nodemon server | bunyan",
    "lint": "eslint .",
    "test": "eslint . && NODE_PATH=./ nyc --reporter=html --reporter=text mocha",
    "tdd": "NODE_PATH=./ mocha --watch",
    "codecov": "nyc report --reporter=lcov && codecov",
    "debug": "nodemon --nolazy --debug-brk=5858  server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/8DCloud/koa-starter.git"
  },
  "keywords": [
    "koa",
    "starter"
  ],
  "author": "Motivateco",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/8DCloud/koa-starter/issues"
  },
  "homepage": "https://github.com/8DCloud/koa-starter#readme",
  "dependencies": {
    "bunyan": "^1.8.6",
    "bunyan-logger": "^0.1.1",
    "celebrate": "^4.0.1",
    "dotenv": "^4.0.0",
    "http-errors": "^1.6.1",
    "kcors": "^1.3.2",
    "koa": "^2.2.0",
    "koa-bodyparser": "^4.2.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.2.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "eslint": "^3.16.1",
    "eslint-config-standard": "^7.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^2.1.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "proxyquire": "^1.7.11",
    "sinon": "^1.17.7",
    "sinon-chai": "^2.8.0",
    "supertest": "^3.0.0"
  }
}
